<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
 <servlet>
    <servlet-name>SamlBridgeServlet</servlet-name>
    <servlet-class>com.hof.saml.SamlBridgeServlet</servlet-class>
    <init-param>
      <param-name>Description</param-name>
      <param-value>Yellowfin SAML Bridge Configuration Servlet</param-value>
    </init-param>
    <init-param>
      <param-name>YellowfinWebserviceURL</param-name>
      <param-value>http://localhost:8080/yellowfin</param-value>
    </init-param>
    <init-param>
      <param-name>YellowfinWebserviceUser</param-name>
      <param-value>admin@yellowfin.com.au</param-value>
    </init-param>
    <init-param>
      <param-name>YellowfinWebservicePassword</param-name>
      <param-value>test</param-value>
    </init-param>
    <init-param>
      <param-name>EmailAttribute</param-name>
      <param-value>email</param-value>
    </init-param>
    <init-param>
      <param-name>FirstNameAttribute</param-name>
      <param-value>firstname</param-value>
    </init-param>
    <init-param>
      <param-name>LastNameAttribute</param-name>
      <param-value>lastname</param-value>
    </init-param>
    <init-param>
      <param-name>FullNameAttribute</param-name>
      <param-value>fullname1</param-value>
    </init-param>
    <init-param>
      <param-name>UsernameAttribute</param-name>
      <param-value>uid</param-value>
    </init-param>
    <init-param>
      <param-name>YellowfinRole</param-name>
      <param-value>Consumer &amp; Collaborator</param-value>
    </init-param>
    <init-param>
      <param-name>AutoProvision</param-name>
      <param-value>true</param-value>
    </init-param>
     <load-on-startup>1</load-on-startup>
 </servlet>	
	
</web-app>